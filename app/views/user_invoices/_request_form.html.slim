= simple_form_for(user_invoice_request_form, url: new_organization_user_invoice_path(organization), html: { method: :get, class: 'form-vertical' }) do |f|
  = f.error_notification
  .row
    .col-sm-3
      .form-group
        = f.input :user_id, as: :select, collection: users, label_method: :to_s
    .col-sm-3
      .form-group
        = f.input :date_from, as: :string, input_html: {role: 'datetimepicker'}
    .col-sm-3
      .form-group
        = f.input :date_to, as: :string, input_html: {role: 'datetimepicker'}

    .col-sm-2
      .form-group
        label &nbsp;
        = button_tag type: 'submit', class: 'btn btn-block btn-primary', :data => { 'disable-with' => 'Ищем' } do
          | Найти задачи
