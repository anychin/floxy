.container
  small.text-muted= "Задача ##{@task.id}"
  - if @task.milestone.present?
    | &nbsp;&bull;&nbsp;
    strong= link_to @task.milestone, organization_milestone_path(current_organization, @task.milestone)
  h1
    .pull-left
      = @task.title
      | &nbsp;&nbsp;
    .pull-left
      = link_to 'edit', edit_organization_task_path(current_organization, @task), class: 'btn btn-default'
    .pull-right
      = link_to 'delete', organization_task_path(current_organization, @task), method: :delete, confirm: "Удалить задачу #{@task}?", class: 'btn btn-default'
    .clearfix
  = task_state_buttons @task, @organization, css_class: "task-show__state-btn"
  hr
  - columns = [:milestone, :assignee, :estimated_time, :estimated_expenses, :task_level, :task_type, :tool, :aim, :state]
  .row
    .col-md-6
      table.table.table-condensed.table-hover
        tbody
          - columns.each do |field|
            tr
              td= t("attributes.task.#{field}")
              td= task_field @task, field, current_organization
