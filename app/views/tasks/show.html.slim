.container
  small.text-muted= "Задача ##{@task.id}"
  - if @task.milestone.present?
    | &nbsp;&bull;&nbsp;
    strong= link_to @task.milestone.title, @task.milestone
  h1
    .pull-left
      = @task.title
      | &nbsp;&nbsp;
    .pull-left
      = link_to 'Изменить', edit_task_path(@task), class: 'btn btn-default'
    .clearfix
  hr
  p
    = "owner: #{@task.owner}"
  p
    = "assignee: #{@task.assignee}"
  p
    = "estimated_time: #{@task.estimated_time}"
  p
    = "elapsed_time: #{@task.elapsed_time}"
